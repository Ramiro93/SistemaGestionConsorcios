@model Repositorios.Usuario
@{
    ViewBag.Title = "CrearCuenta";
}

<h2 class="mb-4">Registrarse</h2>

<form action="/Cuenta/Registrar" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input name="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Ingrese el email">
        @Html.ValidationMessageFor(Model => Model.Email, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="Password" type="password" class="form-control" id="password" placeholder="Password">
        @Html.ValidationMessageFor(Model => Model.Password, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="password">Re-ingrese Password</label>
        <input name="Repassword" type="password" class="form-control" id="repassword" placeholder="Re-ingrese Password">
    </div>
    <div class="d-flex flex-column align-items-center mt-4">
        <button type="submit" class="btn btn-primary">Registrarse</button>
    </div>
</form>